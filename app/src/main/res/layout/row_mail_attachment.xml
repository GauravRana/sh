<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    xmlns:ripple="http://schemas.android.com/apk/res-auto"
    android:layout_height="@dimen/_40sdp">


        <RelativeLayout
            android:layout_width="@dimen/_100sdp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_4sdp"
            android:gravity="center"
            android:background="@drawable/border_layout"
            android:padding="@dimen/_1sdp">

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/image_mail_attachment"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_56sdp"
                    ripple:failureImage="@drawable/loader_background"
                    ripple:placeholderImage="@drawable/loader_background"
                    ripple:roundAsCircle="false"
                    android:scaleType="centerCrop"
                    android:focusable="false"
                    android:focusableInTouchMode="false"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center|right"
                    android:layout_alignEnd="@+id/image_mail_attachment"
                    android:layout_alignParentTop="true">
                        <ImageButton
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:padding="@dimen/_5sdp"
                            android:id="@+id/delete_screenshot_attachment"
                            android:background="@android:color/transparent"
                            android:src="@mipmap/white_cross" />
                </LinearLayout>
        </RelativeLayout>


</LinearLayout>