<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@null">

    <!--<LinearLayout
        android:layout_width="match_parent"
        android:background="@null"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:id="@+id/pop_back_root"
        android:layout_height="match_parent">-->



        <LinearLayout
                android:layout_width="@dimen/_193sdp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_margin="@dimen/_7sdp"
                android:background="@drawable/toast_back"
                android:gravity="center"
                android:minHeight="@dimen/_96sdp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/pop_title_alert"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:visibility="gone"
                    android:textColor="@color/pink"
                    android:textSize="@dimen/_8sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|left"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/pop_msg_alert"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:layout_marginBottom="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_26sdp"
                        android:layout_marginRight="@dimen/_26sdp"
                        android:gravity="center"
                        android:lineSpacingExtra="@dimen/_5sdp"
                        android:text="@string/no_internet"
                        android:textColor="@color/black_mail_text"
                        android:textSize="@dimen/_9sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/extra_up"
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/extra"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_height="@dimen/_3sdp">

            </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/_193sdp"
            android:gravity="right|top"
            android:layout_marginLeft="@dimen/_7sdp"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/delete_alert"
                android:layout_width="@dimen/_60sdp"
                android:visibility="gone"
                android:layout_height="@dimen/_18sdp"
                android:background="@drawable/rounded_btn_white"
                android:layout_margin="@dimen/_15sdp"
                android:textAllCaps="true"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/pink"
                android:textSize="@dimen/_6sdp" />
            <Button
                android:id="@+id/back_alert"
                android:text="Ok"
                style="?android:attr/borderlessButtonStyle"
                android:textColor="@color/white"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_23sdp"
                android:background="@drawable/edit_round_pink_bg"
                android:textAllCaps="false"
                android:textSize="@dimen/_8sdp"/>
        </LinearLayout>



   <!-- </LinearLayout>-->


</LinearLayout>