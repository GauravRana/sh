<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layoutAnimation="@anim/layoutanimation"
    tools:layoutAnimation="@null"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center|top"
        android:padding="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:layout_marginLeft="@dimen/_3sdp"
        android:weightSum="1"
        android:layout_height="wrap_content">


        <com.sydehealth.sydehealth.utility.BImageView
            android:layout_weight="0.45"
            android:layout_width="0dp"
            android:layout_margin="@dimen/_2sdp"
            android:id="@+id/treatment_img"
            android:src="@mipmap/condition_thumb"
            android:layout_height="@dimen/_60sdp" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight=".55"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_6sdp"
                android:layout_marginLeft="@dimen/_3sdp"
                android:lineSpacingExtra="@dimen/mail_line_space"
                android:textColor="@color/black_mail_text"
                android:id="@+id/treatment_title"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/mail_text_size"
                android:lineSpacingExtra="@dimen/mail_line_space"
                android:paddingLeft="@dimen/_3sdp"
                android:paddingRight="@dimen/_3sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:gravity="center|left"
                android:id="@+id/treatment_text"
                android:textColor="@color/black_mail_text"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>