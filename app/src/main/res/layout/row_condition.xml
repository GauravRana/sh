<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_gravity="center">

    <RelativeLayout
        android:layout_width="@dimen/_81sdp"
        android:layout_height="@dimen/_81sdp"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/_6sdp"
        android:layout_marginBottom="@dimen/_6sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:id="@+id/iv_condition_img"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:layout_alignParentBottom="true"
            android:gravity="center|top"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/condition_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_5sdp"
                android:textColor="@color/light_grey"
                android:layout_marginRight="@dimen/_3sdp"
                android:text="@string/ic_conditions"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTint="@color/gray"
                android:gravity="center"
                android:text="0"
                android:layout_marginRight="@dimen/_10sdp"
                android:id="@+id/treatment_count"
                android:textColor="@color/gray"
                android:textSize="@dimen/_6sdp" />


            <TextView
                android:id="@+id/count_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_3sdp"
                android:textColor="@color/light_grey"
                android:text="@string/ic_treatment"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/condition_count"
                android:gravity="center"
                android:text="0"
                android:textColor="@color/gray"
                android:textSize="@dimen/_6sdp"

                />


        </LinearLayout>

    </RelativeLayout>

</LinearLayout>
